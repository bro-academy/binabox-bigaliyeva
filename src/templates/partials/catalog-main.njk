<section class="catalog-main">
  <div class="catalog-main__header">
    <h2 class="catalog-main__title">All item</h2>
      <div class="catalog-main__sort">
        <label for="sort" class="catalog-main__label">Sort by:</label>
        <select id="sort" class="catalog-main__select" name="sort">
          <option value="popularity">Popularity</option>
          <option value="newest">Newest</option>
          <option value="price-low">Price: Low to High</option>
          <option value="price=high">Price: High to Low</option>
        </select>
      </div>
       <div class="search-form__field">
     <form class="search-form search-form--catalog" action="#" method="get">
      <label for="catalogSearch" class="visually-hidden"></label>
        <input
          type="search"
          name="query"
          id="query-search"
          class="search-form__input"
          placeholder="Search"
          required/>
        <button type="submit" class="search-form__button"></button>
    </form>
    </div>
    </div>
    <div class="catalog-main__controls">
      <div class="catalog-main__tags">
        <button class="catalog-main__tag catalog-main__tag--active">NFT</button>
        <button class="catalog-main__tag">ICO</button>
        <button class="catalog-main__tag">Crypto</button>
      </div>
      </div>
  <div class="catalog-main__products">
  {% for product in catalog.products %}
    {% set product = product %}
    {% include "partials/product-card.njk" %}
  {% endfor %}
</div>
</section>
