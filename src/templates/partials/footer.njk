<footer class="footer">
  <a href="#">
    <img
      src="/img/{{ footer.logo }}-1x.webp"
      class="logo logo--secondary"
      alt="Binabox logo"
    />
  </a>

  <p class="footer__text">{{ footer.text }}</p>

  <h2 class="footer__title">{{ footer.subscribeTitle }}</h2>
  <nav class="footer-nav">
    <ul class="footer-nav__list">
      {% for item in footer.navMain %}
      <li class="footer-nav__item">
        <a href="{{ item.url }}" class="footer-nav__link">{{ item.label }}</a>
      </li>
      {% endfor %}
    </ul>
  </nav>

  <h2 class="footer__title">{{ footer.companyTitle }}</h2>
  <nav class="footer-nav">
    <ul class="footer-nav__list">
      {% for item in footer.navCompany %}
      <li class="footer-nav__item">
        <a href="{{ item.url }}" class="footer-nav__link">{{ item.label }}</a>
      </li>
      {% endfor %}
    </ul>
  </nav>

  <p class="footer__text">{{ footer.copyright }}</p>

  <div class="icon">
    {% for social in footer.socials %}
    <a
      href="{{ social.url }}"
      class="social-link"
      target="_blank"
      rel="noopener noreferrer"
    >
      <img
        src="/img/icons/{{ social.icon }}.svg"
        class="icon-img"
        alt="{{ social.alt }}"
      />
    </a>
    {% endfor %}
  </div>
</footer>