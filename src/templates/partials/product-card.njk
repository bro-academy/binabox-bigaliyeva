<article class="product-card">
<div class="product-card__image-wrapper"
  <a href="#" class="product-card__image">
    <img
      src="/img/{{ product.image }}-1x.webp"
      width="252.8"
      height="324"
      alt="{{ product.name | lower }}"
      srcset="/img/{{ product.image }}-1x.webp, /img/{{ product.image }}-2x.webp 2x"
      class="product-card__image"
    />
    <span class="badge badge--{{ product.badgeType }}">{{ product.badge }}</span>
  </a>

    {% if product.showButton %}
    <div class="product-card__overlay">
     <button class="button button--white product-card__btn">Favourites</button>
      <button class="button button--secondary product-card__btn">Buy</button>
      </div>
    {% endif %}
  </div>

  <div class="product-card__info">
    <p class="product-card__price">{{ product.price }}</p>
    <h3 class="product-card__name">{{ product.name }}</h3>
  </div>
</article>