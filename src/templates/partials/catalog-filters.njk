<aside class="catalog-filter">
  <form class="catalog-filter__form" action="#" method="get">
    {% for filter in filters %}
    <div class="catalog-filter__block">
      <h3 class="catalog-filter__title">{{ filter.title }}</h3>

      {% if filter.options.length %}
      <ul class="catalog-filter__list">
        {% for option in filter.options %}
        <li class="catalog-filter__item">
          <label class="catalog-filter__label">
            <input type="{{ filter.type }}" name="{{ filter.title | lower }}"
            value="{{ option | lower }}" {% if filter.type == 'radio' and
            loop.first %} required {% endif %} />
            {{ option }}
          </label>
        </li>
        {% endfor %}
      </ul>
      {% endif %}
    </div>
    {% endfor %}

    <button type="submit" class="catalog-filter__apply">Apply</button>
  </form>
</aside>
